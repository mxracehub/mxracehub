modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = [ "hugo", "zip", "unzip"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "npx ts-node server/index.ts"]

[workflows]
runButton = "Start Server"

[[workflows.workflow]]
name = "Start Server"
author = 41681385
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/simple-server.js"
